<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tv_days_got"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好"
        />
    <TextView
        android:id="@+id/tv_days_unread_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/tv_days_got"
        android:text="0"/>
    <TextView
        android:id="@+id/tv_days_time"
        android:layout_below="@+id/tv_days_got"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="11sp"
        tools:text="2018-05-12 17:25"/>

    <TextView
        android:id="@+id/tv_gold_nums_add"
        android:layout_toLeftOf="@+id/tv_gold_nums"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tv_gold_nums"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="600"
        android:textSize="15dp"/>

    <View
        android:layout_below="@+id/tv_days_time"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dp"
        android:background="#999999"/>
</RelativeLayout>
